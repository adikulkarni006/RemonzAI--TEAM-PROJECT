    </div>
<!-- title  -->
    <div class="main">
        <div class="main-header">
            <h2 id="animatedTitle"></h2>
        </div>
    </div>
<!-- Notification-BELL  -->
    <div class="bell">
        <span class="bell-icon"><i class="fa-jelly fa-regular fa-bell"></i></span>
    </div>
<!-- CONTAINER.NO-1  -->
        <div class="form-container">
            <input type="text" id="searchQuery" placeholder="🔍 Search your queries...">
            <h1>Ask a Query 👨‍💻</h1>
            <form id="queryForm">
                <input type="text" id="title" placeholder="Enter your query title" required /> 
                <select id="category">
                    <option value="Academic">📚 Academic</option>
                    <option value="Exam">📅 Exam</option>
                    <option value="Technical">💻 Technical</option>
                    <option value="Fees">💰 Fees</option>
                    <option value="Syllabus">📄 Syllabus</option>
                    <option value="Library">📖 Library</option>
                    <option value="Career">🎯 Career</option>
                    <option value="General">❓General</option>
                </select>
                <textarea id="description" placeholder="Describe your query in detail..." rows="5" required></textarea>
                <div class="file-attachment">
                    <div class="upload-box">
                        <input type="file" id="file-upload" hidden />
                        <label for="file-upload" class="upload-btn"><i class="fa-solid fa-upload"></i>Upload Image
                        <p>(optional)</p>
                        </label>
                        <p id="file-name">No file selected</p>
                    </div>
                </div>
                <button type="submit">Submit Query ╰⪼</button>
            </form>
        </div>
<!-- CONTAINER.NO-2  -->
        <div class="form-container">
            <div class="response-header">
                <h1>AI Response ֎🇦🇮</h1>
            </div>
            <textarea id="answer" placeholder="Your answer will appear here..." rows="5" readonly></textarea>
            <div class="response-feedback">
                <span>Was this helpful?</span>
                <br><br>
                <div id="feedback-status" style="color: green;"></div>

                <button class="icon-button" title="Helpful"><span class="material-symbols-outlined">thumb_up</span></button>

                <button class="icon-button" title="Not Helpful"><span class="material-symbols-outlined">thumb_down</span></button>

                <button class="downloadBtn" onclick="downloadResponse()">📥 Download Response</button>
            </div>
        </div>
<!-- CONTAINER.NO-3  -->
        <div class="dashboard form-container">
                <h2>Recent Queries</h2>
            <div class="query-card"></div>
            <div class="queries">
                <h3>How to prepare for final exams?</h3>
                <button onclick="viewQuery(1)">View Details</button>
            </div>
            <div class="queries">
                <h3>Library book renewal process</h3>
                <button onclick="viewQuery(2)">View Details</button>
            </div>
            <div class="queries">
                <h3>Technical support for portal</h3>
                <button onclick="viewQuery(3)">View Details</button>
            </div>
<!-- In recent queries list -->
                <span class="status-badge pending">⏳ Pending</span>
                <span class="status-badge answered">✅ Answered</span>
        </div>
    </div>
    </div>
    <!-- CONTAINER.NO-4  -->
